[*.{kt,kts}]
indent_size = 4
indent_style = space
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
max_line_length = off
disabled_rules = import-ordering,no-wildcard-imports

[*.{yaml,yml,xml,properties}]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[gradlew.bat]
end_of_line = crlf